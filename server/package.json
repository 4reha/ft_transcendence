{
    "name": "server",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "api:dev": "json-server --watch db.json --port 4444",
        "db:dev:migrate": "prisma migrate dev --name init",
        "db:dev:deploy": "prisma migrate reset",
        "db:up": "docker-compose -f ../docker-compose.yml up -d ",
        "db:down": "docker-compose -f ../docker-compose.yml down",
        "db:restart": "npm run db:down && npm run db:up && sleep 1 && npm run db:dev:migrate",
        "db:reset": "npm run db:down && npm run db:up && sleep 1 && npm run db:dev:deploy",
        "db:studio": "prisma studio",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^9.3.10",
        "@nestjs/core": "^9.3.10",
        "@nestjs/jwt": "^10.0.2",
        "@nestjs/passport": "^9.0.3",
        "@nestjs/platform-express": "^9.0.0",
        "@nestjs/platform-socket.io": "^9.3.9",
        "@nestjs/serve-static": "^3.0.1",
        "@nestjs/websockets": "^9.3.9",
        "@types/qrcode": "^1.5.0",
        "@types/shortid": "^0.0.29",
        "@types/uuid": "^9.0.1",
        "argon2": "^0.30.3",
        "bcrypt": "^5.1.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cookie-parser": "^1.4.6",
        "otplib": "^12.0.1",
        "passport": "^0.6.0",
        "passport-42": "^1.2.6",
        "passport-google-oauth20": "^2.0.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "qrcode": "^1.5.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.0",
        "shortid": "^2.2.16",
        "socket.io-client": "^4.6.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.3.0",
        "@nestjs/config": "^2.3.1",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^9.0.0",
        "@prisma/client": "^4.13.0",
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.13",
        "@types/jest": "29.2.4",
        "@types/multer": "^1.4.7",
        "@types/node": "18.11.18",
        "@types/passport-jwt": "^3.0.8",
        "@types/passport-local": "^1.0.35",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "29.3.1",
        "json-server": "^0.17.2",
        "prettier": "^2.3.2",
        "prisma": "^4.13.0",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "29.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.1.1",
        "typescript": "^4.7.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
